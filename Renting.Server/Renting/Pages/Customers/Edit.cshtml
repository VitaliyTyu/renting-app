@page
@model Renting.Pages.Customers.EditModel

<br />
<h2 class="text-info">Редактирование покупателя</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Customer.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Name">Имя</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Name" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Name" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Surname">Фамилия</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Surname" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Surname" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Age">Возраст</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Age" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Age" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Height">Рост</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Height" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Height" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.Weight">Вес</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.Weight" class="form-control" />
            </div>
            <span asp-validation-for="Customer.Weight" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.ShoeSizeRu">Размер обуви</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.ShoeSizeRu" class="form-control" />
            </div>
            <span asp-validation-for="Customer.ShoeSizeRu" class="text-danger"></span>
        <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Customer.ClothingSizeRu">Размер одежды</label>
            </div>
            <div class="col-6">
                <input asp-for="Customer.ClothingSizeRu" class="form-control" />
            </div>
            <span asp-validation-for="Customer.ClothingSizeRu" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row" style="margin-top: 10px">
            <div class="col-3 offset-3">
                <input type="submit" value="Изменить" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Назад</a>
            </div>
        </div>


    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
