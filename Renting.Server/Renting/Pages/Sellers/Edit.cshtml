@page
@model Renting.Pages.Sellers.EditModel

<br />
<h2 class="text-info">Редактирование продавца</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Seller.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Seller.Name">Имя</label>
            </div>
            <div class="col-6">
                <input asp-for="Seller.Name" class="form-control" />
            </div>
            <span asp-validation-for="Seller.Name" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Seller.Surname">Фамилия</label>
            </div>
            <div class="col-6">
                <input asp-for="Seller.Surname" class="form-control" />
            </div>
            <span asp-validation-for="Seller.Surname" class="text-danger"></span>
            <br />
        </div>

        <div class="form-group row" style="margin-top: 10px">
            <div class="col-3 offset-3">
                <input type="submit" value="Изменить" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Назад</a>
            </div>
        </div>


    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
